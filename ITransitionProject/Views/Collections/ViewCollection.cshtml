@model ITransitionProject.ViewModels.EditCollectionItemsViewModel

<h2>@Model.CollectionName: @Model.CollectionTheme.</h2>
<br />
<form role="form" method="get">
    <input type="hidden" name="UserId" value="@Model.UserId" />
    <input type="hidden" name="CollectionId" value="@Model.CollectionId" />
    <input type="hidden" name="CollectionName" value="@Model.CollectionName" />
    <input type="hidden" name="CollectionTheme" value="@Model.CollectionTheme" />
    <button asp-controller="Items" asp-action="AddItem" class="btn btn-success">Добавить</button>
    <table class="table">
        <tr>
            <th></th>
            <th>Название</th>
            <th>Дополнительные поля: @ViewBag.AdditionalFieldsNames</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @{
            int i = 1;
            foreach (Item item in Model.Items)
            {
                <tr>
                    <td>@i. </td>
                    <td>@item.Name</td>
                    <td></td>
                    <td><button asp-controller="Items" asp-action="ViewItem" class="btn btn-primary text-sm-center" name="itemId" value="@item.Id">Просмотреть</button></td>
                    <td><button asp-controller="Items" asp-action="EditItem" class="btn" style="color: brown" name="itemId" value="@item.Id">Редактировать</button></td>
                    <td><button asp-controller="Items" asp-action="DeleteItem" class="btn btn-danger" name="itemId" value="@item.Id">Удалить</button></td>
                </tr>
            }
        }
    </table>
</form>

